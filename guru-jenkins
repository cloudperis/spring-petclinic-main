pipeline{
agent any

stages{
    stage('source'){
        steps{

            sh "git clone https://github.com/cloudperis/spring-petclinic-main.git"

        }
    }
stage('build'){
    steps{
        sh "ls"
    }
}

stage('test'){
    steps{
        echo "testing my app loading"
    }
}

stage('deploy'){
    steps{
      echo "deploying my application in process"
    }
}
}


}